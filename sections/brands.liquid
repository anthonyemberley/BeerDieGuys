<section class="page-width">
  <div class="brands-cover">
    <h2>{{ section.settings.title }}</h2>
    <div class="about_cover">
    {% for block in section.blocks %}
    <div class="about-block">
      {% if block.settings.image != blank %}
      <div class="brand-logo-img">  <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}" loading="lazy" width="{{ block.settings.image.width }}" height="{{ block.settings.image.height }}"></div>
      {% endif %}

      {% if block.settings.brand-txt != blank %}
      <span class="brand-logo-txt">{{ block.settings.brand-txt | truncate: 100 }}</span>
        {% endif %}
    </div>
    {% endfor %}
    </div>
  </div>
</section>

{%- style -%}
  #shopify-section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top | times: 0.50 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.50 | round: 0 }}px;
  }

  @media screen and (min-width: 989px) {
     #shopify-section-{{ section.id }}{
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% schema %}
{
  "name": "Brands",
  "class": "brands-content",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [
     {
       "name": "Slide",
       "type": "slide",
       "settings": [
         {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
          "type": "richtext",
          "id": "brand-txt",
          "label": "Text"
        }
       ]
     }
   ],
  "presets": [
    {
      "category": "Advanced",
      "name": "Brands"
    }
  ]
}

{% endschema %}